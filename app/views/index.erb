<html>
	<head>

	</head>
	<body>
		<h3>Access controll for <%= params[:type] %></h3>
		<table>
			<thead>
				<td>
					User types
				</td>
				<td>
					Actions
				</td>
			</thead>
			<tbody>
				<tr>
					<td>

					</td>
					<% @object.actions.each do |action| %>
						<td>
							<%= action %>
						</td>
					<% end %>
				</tr>
				<% User.user_types.each do |user_type| %>
					<tr>
						<td>
							<%= user_type %>
						</td>
						<% @object.actions.each do |action| %>
							<td>
								<%= @acls.find{|acl| acl.user_type == user_type && acl.action == action}.present? %>
							</td> 
						<% end %>
					</tr>
				<% end %>
			</tbody>

		</table>
	</body>
</html>